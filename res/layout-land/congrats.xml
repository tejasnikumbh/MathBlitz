<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundIWant">
    <RelativeLayout 
        android:id="@+id/congrats_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/congrats_header" 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_marginTop="10dp">
            
            <LinearLayout 
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                
            </LinearLayout>
 			<Button 
    	           android:layout_width="0dp"
    	           android:layout_height="match_parent"
    	           android:layout_weight="3"
    	           android:padding="5dp"
    	           android:background="@color/morpankhi"
    	           android:text="@string/text_congrats"
    	           android:textColor="@color/White"
    	           android:textSize="24dp"
    	           />
 			<LinearLayout 
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
    	                     
 			      
        </LinearLayout>

        <LinearLayout
            android:id="@+id/congrats_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/congrats_header"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp" >

            <LinearLayout
        	    android:orientation="horizontal"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content">
        	    <LinearLayout
        	        android:orientation="vertical"
        	        android:layout_height="match_parent"
        	        android:layout_width="0dp"
        	        android:layout_weight="1"/>
        	    <LinearLayout
        	        android:orientation="vertical"
        	        android:layout_height="wrap_content"
        	        android:layout_width="0dp"
        	        android:layout_weight="2">
					
        	    	<ImageView
        	    	    android:gravity="center"
        	    	    android:id="@+id/congrats_img"
        	    	    android:layout_width="match_parent"
        	    	    android:layout_height="100dp" 
        	    	    android:scaleType="fitCenter"
        	    	    android:src="@drawable/pencil1"
        	    	    android:layout_weight="1" />
                   
                        <TextView
                		android:id="@+id/congrats_msg"
                		android:layout_width="match_parent"
                		android:layout_height="0dp"
                		android:layout_weight="5"
                		android:layout_margin="5dp"
                		android:textSize="14dp"
                		android:text="@string/congrats_msg"
                		android:gravity="left"/>
                   
        	    </LinearLayout>
        	    
        	    <LinearLayout
        	        android:orientation="vertical"
        	        android:layout_height="match_parent"
        	        android:layout_width="0dp"
        	        android:layout_weight="1">
                    
                </LinearLayout>
        	    
          
        	    
        	</LinearLayout>
        	
        	
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
